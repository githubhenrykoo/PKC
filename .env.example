# Development Environment Variables for PKC
# Copy this to .env for local development

# Google OAuth (Development - use your own test credentials)
PUBLIC_GOOGLE_API_KEY=your_development_google_api_key
PUBLIC_GOOGLE_CLIENT_ID=your_development_google_client_id
PUBLIC_GOOGLE_CLIENT_SECRET=your_development_google_client_secret

# Notion OAuth (Development - use your own test credentials)
PUBLIC_NOTION_AUTH_URL=https://api.notion.com/v1/oauth/authorize?client_id=YOUR_DEV_CLIENT_ID&response_type=code&owner=user&redirect_uri=http%3A%2F%2Flocalhost%3A4321%2Fauth%2Fnotion%2Fcallback
PUBLIC_NOTION_CLIENT_ID=your_development_notion_client_id
PUBLIC_NOTION_CLIENT_SECRET=your_development_notion_client_secret

# Authentik (Development)
PUBLIC_AUTH_URL=http://localhost:9000
PUBLIC_AUTHENTIK_URL=http://localhost:9000
PUBLIC_AUTHENTIK_CLIENT_ID=your_development_authentik_client_id
PUBLIC_AUTHENTIK_CLIENT_SECRET=your_development_authentik_client_secret
PUBLIC_AUTHENTIK_REDIRECT_URI=http://localhost:4321/auth/callback

# MCard API (Development - local instance)
PUBLIC_API_URL=http://localhost:49384/v1
PUBLIC_MCARD_API_URL=http://localhost:49384/v1

# RAG Service (Development - local instance)
PUBLIC_RAG_API_URL=http://localhost:28302/api/v1

# Thingsboard (Development - use test instance or localhost)
PUBLIC_THINGSBOARD_URL=http://localhost:8080/
THINGSBOARD_URL=http://localhost:8080/
THINGSBOARD_USERNAME=your_development_thingsboard_username
THINGSBOARD_PASSWORD=your_development_thingsboard_password
PUBLIC_THINGSBOARD_DASHBOARD_URL=http://localhost:8080/dashboard/your_test_dashboard_id

# Telegram Bot (Development - use test bot)
TELEGRAM_BOT_TOKEN=your_development_telegram_bot_token
TELEGRAM_CHAT_ID=your_development_telegram_chat_id
TELEGRAM_PORT=48637

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=true

