# Production Environment Variables for PKC
# Copy this to .env for production deployment

# Google OAuth (Production)
PUBLIC_GOOGLE_API_KEY=your_production_google_api_key
PUBLIC_GOOGLE_CLIENT_ID=your_production_google_client_id
PUBLIC_GOOGLE_CLIENT_SECRET=your_production_google_client_secret

# Notion OAuth (Production)
PUBLIC_NOTION_AUTH_URL=https://api.notion.com/v1/oauth/authorize?client_id=YOUR_CLIENT_ID&response_type=code&owner=user&redirect_uri=https%3A%2F%2Fyour-domain.com%2Fauth%2Fnotion%2Fcallback
PUBLIC_NOTION_CLIENT_ID=your_production_notion_client_id
PUBLIC_NOTION_CLIENT_SECRET=your_production_notion_client_secret

# Authentik (Production)
PUBLIC_AUTH_URL=https://auth.pkc.pub
PUBLIC_AUTHENTIK_URL=https://auth.pkc.pub
PUBLIC_AUTHENTIK_CLIENT_ID=your_production_authentik_client_id
PUBLIC_AUTHENTIK_CLIENT_SECRET=your_production_authentik_client_secret
PUBLIC_AUTHENTIK_REDIRECT_URI=https://your-domain.com/auth/callback

# MCard API (Production)
PUBLIC_API_URL=https://bmcard.pkc.pub/v1
PUBLIC_MCARD_API_URL=https://bmcard.pkc.pub/v1

# RAG Service (Production)
PUBLIC_RAG_API_URL=https://rag.pkc.pub/api/v1

# Thingsboard (Production)
PUBLIC_THINGSBOARD_URL=https://tb.pkc.pub/
THINGSBOARD_URL=https://tb.pkc.pub/
THINGSBOARD_USERNAME=your_production_thingsboard_username
THINGSBOARD_PASSWORD=your_production_thingsboard_password
PUBLIC_THINGSBOARD_DASHBOARD_URL=https://tb.pkc.pub/dashboard/your_dashboard_id

# Telegram Bot (Production)
TELEGRAM_BOT_TOKEN=your_production_telegram_bot_token
TELEGRAM_CHAT_ID=your_production_telegram_chat_id
TELEGRAM_PORT=48637

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false

# Deployment Configuration
NODE_ENV=production
