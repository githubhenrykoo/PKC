---
import { cn } from "@/lib/utils";

interface Props {
  className?: string;
  title?: string;
}

const { className, title = "MCard" } = Astro.props;
---

<div class={cn(
  "bg-card text-card-foreground rounded-lg shadow-sm border", 
  className
)}>
  <div class="p-6">
    <h3 class="text-lg font-semibold leading-none tracking-tight">{title}</h3>
    <div class="mt-4 flex min-h-[100px] items-center justify-center rounded-md border bg-muted/50 p-4 text-muted-foreground">
      mcard
    </div>
  </div>
</div>

