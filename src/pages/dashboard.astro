---
import DashboardLayout from '../layouts/dashboard-layout.astro';
import MCardDisplay from '../components/Mcard/MCardDisplay.astro';
import { cn } from '@/lib/utils';
---

<DashboardLayout title="MCard Dashboard">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold tracking-tight">Dashboard</h1>
      <p class="text-muted-foreground">View and manage your MCard content</p>
    </div>
    
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <!-- MCard Component -->
      <MCardDisplay title="MCard Display" />
      
      <!-- Statistics Card -->
      <div class="rounded-lg border bg-card text-card-foreground shadow-sm">
        <div class="p-6 flex flex-col space-y-1.5">
          <h3 class="text-lg font-semibold leading-none tracking-tight">Statistics</h3>
        </div>
        <div class="p-6 pt-0 grid grid-cols-3 gap-4">
          <div class="flex flex-col items-center">
            <span class="text-2xl font-bold text-primary">0</span>
            <span class="text-xs text-muted-foreground">Total Cards</span>
          </div>
          <div class="flex flex-col items-center">
            <span class="text-2xl font-bold text-primary">0</span>
            <span class="text-xs text-muted-foreground">Total Files</span>
          </div>
          <div class="flex flex-col items-center">
            <span class="text-2xl font-bold text-primary">0 MB</span>
            <span class="text-xs text-muted-foreground">Storage</span>
          </div>
        </div>
      </div>
      
      <!-- Recent Activity Card -->
      <div class="rounded-lg border bg-card text-card-foreground shadow-sm">
        <div class="p-6 flex flex-col space-y-1.5">
          <h3 class="text-lg font-semibold leading-none tracking-tight">Recent Activity</h3>
        </div>
        <div class="p-6 pt-0 min-h-[200px] flex items-center justify-center">
          <p class="text-muted-foreground italic">No recent activity to display</p>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>

