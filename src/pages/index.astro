---

<!DOCTYPE html>
<html lang="en" class="light-theme">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#4f46e5">
    <meta name="description" content="PKC Interactive Experience">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-title" content="PKC">
    <link rel="manifest" href="/manifest.webmanifest">
    <link rel="apple-touch-icon" href="/pwa-192x192.png">
    <title>PKC - Interactive Experience</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="theme-toggle" id="themeToggle">
        <i class="fas fa-moon"></i>
    </div>

    <div class="container">
        <main class="main-content">
            <div class="header">
                <h1>Welcome to PKC</h1>
                <p class="subtitle">Interactive Experience</p>
            </div>
            
            <div class="card">
                <div class="image-container">
                    <div class="image-wrapper">
                        <img 
                            src="/images/gasing.png" 
                            alt="Gasing" 
                            class="gasing-image"
                            width="300"
                            height="300"
                            loading="lazy"
                        />
                        <div class="image-overlay"></div>
                    </div>
                </div>
                
                <div class="content">
                    <div class="action-section">
                        <button id="pushButton" class="push-button">
                            <span class="button-content">
                                <i class="fas fa-rocket"></i>
                                <span>Push to Start</span>
                            </span>
                            <span class="button-particles"></span>
                        </button>
                        
                        <p id="countdown" class="countdown-text">
                            <i class="fas fa-clock"></i>
                            <span>I'll push myself in <span class="countdown-number">10</span> seconds</span>
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="status-message" id="statusMessage">
                <div class="status-content">
                    <i class="fas fa-check-circle"></i>
                    <span>Action completed successfully!</span>
                </div>
            </div>
        </main>
    </div>

    <style>
        /* Add fade animations for countdown */
        .fade-out {
            opacity: 0;
            transform: translateY(-5px);
            transition: opacity 0.3s ease, transform 0.3s ease;
        }
        
        .fade-in {
            opacity: 1;
            transform: translateY(0);
            transition: opacity 0.3s ease, transform 0.3s ease;
        }
        
        .fade-out-final {
            opacity: 0;
            transform: translateY(10px);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }
        :root {
            --primary: #4f46e5;
            --primary-dark: #4338ca;
            --primary-light: #818cf8;
            --background: #f8fafc;
            --card-bg: #ffffff;
            --text: #1e293b;
            --text-secondary: #64748b;
            --success: #10b981;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .dark-theme {
            --background: #0f172a;
            --card-bg: #1e293b;
            --text: #f8fafc;
            --text-secondary: #94a3b8;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--background);
            color: var(--text);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            transition: var(--transition);
            line-height: 1.6;
        }

        .theme-toggle {
            position: fixed;
            top: 1.5rem;
            right: 1.5rem;
            background: var(--card-bg);
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: var(--shadow);
            transition: var(--transition);
            z-index: 100;
        }

        .theme-toggle:hover {
            transform: translateY(-2px);
        }

        .theme-toggle i {
            color: var(--text);
            font-size: 1.25rem;
            transition: var(--transition);
        }

        .container {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .header h1 {
            font-size: 2.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, var(--primary), var(--primary-light));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 0.5rem;
        }

        .subtitle {
            color: var(--text-secondary);
            font-size: 1.1rem;
            font-weight: 400;
        }

        .card {
            background: var(--card-bg);
            border-radius: 1rem;
            box-shadow: var(--shadow);
            overflow: hidden;
            transition: var(--transition);
        }

        .image-container {
            position: relative;
            padding: 2rem;
            background: linear-gradient(135deg, #e0e7ff, #c7d2fe);
            text-align: center;
        }

        .image-wrapper {
            position: relative;
            display: inline-block;
            border-radius: 0.75rem;
            overflow: hidden;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        .gasing-image {
            display: block;
            max-width: 100%;
            height: auto;
            max-height: 300px;
            object-fit: contain;
            transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .image-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to bottom, rgba(79, 70, 229, 0.1), rgba(79, 70, 229, 0.3));
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .image-wrapper:hover .gasing-image {
            transform: scale(1.05);
        }

        .image-wrapper:hover .image-overlay {
            opacity: 1;
        }

        .content {
            padding: 2rem;
            text-align: center;
        }

        .content h2 {
            font-size: 1.75rem;
            margin-bottom: 1rem;
            color: var(--text);
        }

        .description {
            color: var(--text-secondary);
            margin-bottom: 2rem;
            font-size: 1.05rem;
        }

        .action-section {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1.5rem;
        }

        .push-button {
            position: relative;
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: white;
            border: none;
            padding: 1rem 2.5rem;
            font-size: 1.125rem;
            font-weight: 600;
            border-radius: 0.75rem;
            cursor: pointer;
            overflow: hidden;
            transition: var(--transition);
            box-shadow: 0 4px 6px -1px rgba(79, 70, 229, 0.3), 0 2px 4px -1px rgba(79, 70, 229, 0.2);
        }

        .push-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(79, 70, 229, 0.3), 0 4px 6px -2px rgba(79, 70, 229, 0.2);
        }

        .push-button:active {
            transform: translateY(0);
        }

        .button-content {
            position: relative;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            z-index: 2;
        }

        .button-particles {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0) 70%);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .push-button:hover .button-particles {
            opacity: 1;
            animation: particles 1.5s ease-in-out infinite;
        }

        @keyframes particles {
            0% { transform: scale(1); opacity: 0.5; }
            50% { transform: scale(1.5); opacity: 0.3; }
            100% { transform: scale(1); opacity: 0.5; }
        }

        .countdown-text {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--text-secondary);
            font-size: 0.95rem;
            margin: 0;
            transition: color 0.3s ease;
        }

        .countdown-number {
            font-weight: 700;
            color: var(--primary);
            min-width: 1.5rem;
            display: inline-block;
            text-align: center;
        }

        .status-message {
            position: fixed;
            bottom: -100px;
            left: 50%;
            transform: translateX(-50%);
            background: var(--success);
            color: white;
            padding: 1rem 2rem;
            border-radius: 0.5rem;
            box-shadow: var(--shadow);
            display: flex;
            align-items: center;
            gap: 0.75rem;
            opacity: 0;
            transition: all 0.4s cubic-bezier(0.68, -0.55, 0.27, 1.55);
            z-index: 1000;
        }

        .status-message.show {
            bottom: 2rem;
            opacity: 1;
        }

        .status-message i {
            font-size: 1.25rem;
        }

        @media (max-width: 768px) {
            body {
                padding: 1rem;
            }

            .header h1 {
                font-size: 2rem;
            }

            .content {
                padding: 1.5rem;
            }

            .push-button {
                width: 100%;
                padding: 0.875rem 2rem;
            }
        }
    </style>
    <!-- Load anime.js at the end of body -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
    <script>
      // Register service worker for PWA
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js').then(registration => {
            console.log('ServiceWorker registration successful with scope: ', registration.scope);
          }).catch(error => {
            console.error('ServiceWorker registration failed: ', error);
          });
        });
      }
        // Declare anime.js type for TypeScript
        declare const anime: any;
        
        // Check if anime.js is loaded
        if (typeof anime === 'undefined') {
            console.error('anime.js failed to load');
            // Optionally load a fallback or show an error message
        }
        
        document.addEventListener('DOMContentLoaded', () => {
            // DOM Elements
            const pushButton = document.getElementById('pushButton') as HTMLButtonElement | null;
            const countdownElement = document.getElementById('countdown') as HTMLElement | null;
            const countdownNumber = document.querySelector('.countdown-number') as HTMLElement | null;
            const statusMessage = document.getElementById('statusMessage');
            const themeToggle = document.getElementById('themeToggle');
            
            if (!pushButton || !countdownElement || !countdownNumber || !statusMessage || !themeToggle) {
                console.error('Required elements not found');
                return;
            }
            
            // State
            let countdownInterval: NodeJS.Timeout;
            let timeLeft = 10;
            let isDarkMode = false;
            
            // Theme Toggle
            themeToggle.addEventListener('click', () => {
                isDarkMode = !isDarkMode;
                document.documentElement.classList.toggle('dark-theme');
                themeToggle.innerHTML = isDarkMode 
                    ? '<i class="fas fa-sun"></i>' 
                    : '<i class="fas fa-moon"></i>';
            });
            
            // Show status message
            const showStatus = (message: string, type = 'success') => {
                if (!statusMessage) return;
                
                const content = statusMessage.querySelector('.status-content');
                if (!content) return;
                
                // Update message and icon based on type
                if (type === 'success') {
                    content.innerHTML = `<i class="fas fa-check-circle"></i><span>${message}</span>`;
                    statusMessage.style.background = '#10b981';
                } else {
                    content.innerHTML = `<i class="fas fa-exclamation-circle"></i><span>${message}</span>`;
                    statusMessage.style.background = '#ef4444';
                }
                
                // Show and auto-hide
                statusMessage.classList.add('show');
                setTimeout(() => {
                    statusMessage.classList.remove('show');
                }, 3000);
            };
            
            // Button hover animation
            const buttonHoverAnimation = anime.timeline({
                autoplay: false,
                duration: 300,
                easing: 'easeOutQuad'
            });
            
            buttonHoverAnimation
                .add({
                    targets: pushButton,
                    translateY: -5,
                    scale: 1.02,
                    boxShadow: '0 10px 15px -3px rgba(79, 70, 229, 0.3), 0 4px 6px -2px rgba(79, 70, 229, 0.2)'
                });
            
            // Button click animation
            const buttonClickAnimation = (e: MouseEvent) => {
                if (!(e.target instanceof HTMLElement)) return;
                
                // Create ripple effect
                const rect = e.target.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                const ripple = document.createElement('span');
                ripple.className = 'ripple-effect';
                ripple.style.left = `${x}px`;
                ripple.style.top = `${y}px`;
                pushButton.appendChild(ripple);
                
                // Animate ripple
                anime({
                    targets: ripple,
                    width: 400,
                    height: 400,
                    opacity: [0.5, 0],
                    easing: 'easeOutQuad',
                    duration: 800,
                    complete: () => ripple.remove()
                });
                
                // Button press animation
                anime({
                    targets: pushButton,
                    scale: [1, 0.98, 1],
                    duration: 300,
                    easing: 'easeInOutQuad'
                });
                
                // Disable button after click
                pushButton.removeEventListener('click', buttonClickAnimation);
                pushButton.style.cursor = 'default';
                
                // Stop countdown
                if (countdownInterval) clearInterval(countdownInterval);
                
                // Show success message
                showStatus('Action completed successfully!', 'success');
                
                // Update button text
                const buttonText = pushButton.querySelector('span:last-child');
                if (buttonText) {
                    buttonText.textContent = 'Pushed!';
                }
                
                console.log('Button pushed!');
            };
            
            // Event listeners
            // Update button click handler to include redirect
            const handleButtonClick = (e: MouseEvent) => {
                buttonClickAnimation(e);
                clearInterval(countdownInterval);
                
                // Button press animation using CSS
                pushButton.classList.add('button-press');
                
                // Redirect after animation completes
                setTimeout(() => {
                    window.location.href = '/Page';
                }, 300);
            };
            
            // Event listeners
            pushButton.addEventListener('mouseenter', () => buttonHoverAnimation.play());
            pushButton.addEventListener('mouseleave', () => buttonHoverAnimation.reverse());
            pushButton.addEventListener('click', handleButtonClick);
            
            // Animation function for countdown text using CSS classes
            function animateCountdown(newText: string) {
                if (!countdownElement) return;
                
                // Add fade-out class
                countdownElement.classList.add('fade-out');
                
                // After fade out completes, update text and fade back in
                setTimeout(() => {
                    if (countdownNumber) {
                        countdownNumber.textContent = newText;
                    }
                    countdownElement.classList.remove('fade-out');
                    countdownElement.classList.add('fade-in');
                    
                    // Remove the fade-in class after animation completes
                    setTimeout(() => {
                        countdownElement.classList.remove('fade-in');
                    }, 600);
                }, 300);
            }
            
            // Start the countdown
            countdownInterval = setInterval(() => {
                timeLeft--;
                
                if (timeLeft <= 0) {
                    clearInterval(countdownInterval);
                    
                    // Final animation before redirect
                    countdownElement.classList.add('fade-out-final');
                    showStatus('Redirecting to Page...', 'info');
                    
                    // Redirect after animation completes
                    setTimeout(() => {
                        window.location.href = '/Page';
                    }, 500);
                } else {
                    const newText = timeLeft.toString();
                    animateCountdown(newText);
                }
            }, 1000);
            
            // Initial call to avoid delay
            if (countdownNumber) {
                countdownNumber.textContent = timeLeft.toString();
            }
            
            // Add styles for ripple effect
            const style = document.createElement('style');
            style.textContent = `
                .ripple-effect {
                    position: absolute;
                    border-radius: 50%;
                    background: rgba(255, 255, 255, 0.7);
                    transform: translate(-50%, -50%);
                    pointer-events: none;
                    width: 10px;
                    height: 10px;
                }
                
                .push-button:disabled {
                    opacity: 0.7;
                    cursor: not-allowed;
                    transform: none !important;
                }
                
                .button-press {
                    transform: scale(0.95) !important;
                    opacity: 0.9 !important;
                    transition: transform 0.2s ease, opacity 0.2s ease !important;
                }
            `;
            document.head.appendChild(style);
        });
    </script>
</body>
</html>